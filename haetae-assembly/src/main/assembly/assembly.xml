<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>conf</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
				<exclude>com.on36.haetae:haetae-test:jar</exclude>
				<exclude>com.on36.haetae:haetae-manager:jar</exclude>

				<exclude>log4j:log4j:jar</exclude>
				<exclude>org.slf4j:slf4j-log4j12:jar</exclude>
				<exclude>org.eclipse.jetty.websocket:*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-s*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-a*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-h*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-i*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-j*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-p*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-u*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-w*:jar</exclude>
				<exclude>org.eclipse.jetty:jetty-x*:jar</exclude>
				<exclude>org.eclipse.jetty.toolchain:jetty-*:jar</exclude>
				<exclude>org.eclipse.jetty:apache-*:jar</exclude>
				<exclude>org.apache.taglibs:taglibs-*:jar</exclude>
				<exclude>org.mortbay.jasper:apache-*:jar</exclude>
				<exclude>javax.annotation:javax.annotation-api:jar</exclude>
				<exclude>javax.servlet:javax.servlet-api:jar</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>ext</outputDirectory>
			<scope>runtime</scope>
			<includes>
				<include>com.on36.haetae:haetae-manager:jar</include>
				<include>com.on36.haetae:haetae-test:jar</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
